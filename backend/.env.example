# JWT Secret Key (REQUIRED for production)
# Generate a random key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here

# JWT Token expiration time in minutes (default: 1440 = 24 hours)
JWT_TOKEN_EXPIRE_MINUTES=1440

# Encryption Key for API keys (REQUIRED for production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Admin password (min 12 characters)
# Change this immediately after first login!
ADMIN_PASSWORD=admin123

# Database path
DATABASE_PATH=data/app.db

# Database pool size
DB_POOL_SIZE=10

# Database pool timeout
DB_POOL_TIMEOUT=30.0

# Frontend URL (for OAuth2 callbacks)
FRONTEND_URL=http://localhost:5173

# Development mode (WARNING: NEVER enable in production!)
# DEV_MODE=true disables all authentication
DEV_MODE=false
DEV_MODE_ALLOWED_IN_PRODUCTION=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Watchdog log level
WATCHDOG_LOG_LEVEL=WARNING

# OpenTelemetry configuration
ENABLE_TELEMETRY=true
OTLP_ENDPOINT=http://localhost:4317

# ============================
# OAuth2 Configuration
# ============================

# GitHub OAuth2 (Optional)
# Get credentials from: https://github.com/settings/developers
# Redirect URI will be automatically set to {FRONTEND_URL}/auth/callback/github
# OAuth scope: Default is "user:email"
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_OAUTH_SCOPE=user:email

# Google OAuth2 (Optional)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Redirect URI will be automatically set to {FRONTEND_URL}/auth/callback/google
# OAuth scope: Default is "openid email profile"
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_SCOPE=openid email profile

# Feishu OAuth2 (Optional)
# Get credentials from: https://open.feishu.cn/app
# Client ID format: cli_xxxxxxxxxxxxx
# Client Secret format: your-app-secret
# Redirect URI will be automatically set to {FRONTEND_URL}/auth/callback/feishu
# OAuth scope: Default is "email", change based on your app permissions
FEISHU_CLIENT_ID=
FEISHU_CLIENT_SECRET=
FEISHU_OAUTH_SCOPE=email

# Microsoft OAuth2 (Optional)
# Get credentials from: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
# Redirect URI will be automatically set to {FRONTEND_URL}/auth/callback/microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common
MICROSOFT_OAUTH_SCOPE=openid email profile user.read
MICROSOFT_LOGIN_BASE_URL=https://login.microsoftonline.com

# OIDC OAuth2 / Generic OAuth2 (Optional)
# Supports Logto, Keycloak, Auth0, and any OIDC-compliant provider
# Get credentials from your OIDC provider's console
# Redirect URI will be automatically set to {FRONTEND_URL}/auth/callback/oidc
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_AUTHORIZATION_URL=
OIDC_TOKEN_URL=
OIDC_USER_INFO_URL=
OIDC_SCOPES=openid email profile
OIDC_EMAIL_DEFAULT_DOMAIN=oidc.noreply

# Optional OIDC parameters (for advanced providers like Logto)
OIDC_RESOURCE=
OIDC_PROMPT=
OIDC_INTERACTION_MODE=
OIDC_FIRST_SCREEN=
OIDC_IDENTIFIER=
OIDC_DIRECT_SIGN_IN=
OIDC_REQUIRED_ROLES=

